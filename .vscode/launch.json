{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha All",
        "runtimeVersion": "8.9.0",
        "program": "${workspaceFolder}/sample/node_modules/mocha/bin/_mocha",
        "args": [
            "-r",
            "ts-node/register",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/sample/src/tests/**/*.spec.ts",
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "protocol": "inspector"
    },
    ]
  }